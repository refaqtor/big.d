{
	"name" : "big-d",
	"description": "MVC Web framework for D",
	"copyright": "Copyright Â© 2016, LLC CERERIS",
	"license": "MIT",
	"authors": [
		"LLC CERERIS"
	],
	"sourcePaths": ["./source"],
	
	"dependencies": {
		"vibe-d": "~>0.7.30-rc.1",
		"hibernated": "~>0.2.31",
		":cli": "*",
		":test": "*"
	},
	
	"targetType" : "library",
	"targetName": "bigd",
	
	"subPackages": [
		{
			"name": "cli",
			"sourcePaths": ["./source/big/console/"],
			"targetType": "executable",
			"targetPath": "bin",
			"targetName": "cli",
			"mainSourceFile" : "./source/big/console/consolelineinterface.d",
			"dependencies": {
				"colorize": "~>1.0.5"
			}
		},
		{
			"name": "test",
			"sourcePaths": ["./tests/", "./source/"],
			"excludedSourceFiles": [
				"./source/big/console/consolelineinterface.d"
			],
			"mainSourceFile" : "./tests/test.d",
			"targetType": "executable",
			"targetPath": "bin",
			"targetName": "test",
			"buildOptions": [
				"unittests"
			],
			"dependencies": {
				"colorize": "~>1.0.5"
			}
		}
	]
}